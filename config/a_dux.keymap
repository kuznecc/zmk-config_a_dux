#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#define def 0
#define num 1
#define sym 2
#define nav 3
#define fn 4
#define _bt 5

&kscan0 {
    debounce-period = <32>;
};

&lt {
    flavor = "balanced";
    tapping-term-ms = <1024>;
};

/ {
        behaviors {
            hm_l: left_hand_positional_hold_tap {
                compatible = "zmk,behavior-hold-tap";
                label = "LEFT_POSITIONAL_HOLD_TAP";
                #binding-cells = <2>;
                flavor = "balanced";
                tapping-term-ms = <1024>;
                bindings = <&kp>, <&kp>;
                hold-trigger-key-positions = <5 6 7 8 9 15 16 17 18 19 25 26 27 28 29 30 31 32 33>;
            };
            hm_r: right_hand_positional_hold_tap {
                compatible = "zmk,behavior-hold-tap";
                label = "RIGHT_POSITIONAL_HOLD_TAP";
                #binding-cells = <2>;
                flavor = "balanced";
                tapping-term-ms = <1024>;
                bindings = <&kp>, <&kp>;
                hold-trigger-key-positions = <0 1 2 3 4 10 11 12 13 14 20 21 22 23 24 30 31 32 33>;
            };
            lplt: left_paren_less_than {
                compatible = "zmk,behavior-mod-morph";
                label = "LEFT_PAREN_LESS_THAN";
                #binding-cells = <0>;
                bindings = <&kp LPAR>, <&kp COMMA>;
                mods = <(MOD_LSFT|MOD_RSFT)>;
            };
            rpgt: right_paren_greater_than {
                compatible = "zmk,behavior-mod-morph";
                label = "RIGHT_PAREN_GREATER_THAN";
                #binding-cells = <0>;
                bindings = <&kp RPAR>, <&kp DOT>;
                mods = <(MOD_LSFT|MOD_RSFT)>;
            };
        };

	    keymap {
                compatible = "zmk,keymap";


                def {
//             ┌─────┐                                          ┌─────┐
//       ┌─────┤  R  ├─────┬─────┐                  ┌─────┬─────┤  U  ├─────┐
//       │  L  ├─────┤  B  │  Z  │                  │  ;  │  Q  ├─────┤  D  │
// ┌─────┼─────┤  N  ├─────┼─────┤                  ├─────┼─────┤  E  ├─────┼─────┐
// │  W  │  H  ├─SFT─┤  T  │  ,  │                  │  .  │  A  ├─SFT─┤  O  │  J  │
// ├─────┼─ALT─┤  V  ├─GUI─┼─────┤                  ├─────┼─GUI─┤  X  ├─ALT─┼─────┤
// │  S  │  M  ├─────┤  C  │  ?  │                  │  G  │  P  ├─────┤  K  │  I  │
// ├─CTL─┼─────┘     └─────┴─────┘                  └─────┴─────┘     └─────┼─CTL─┤
// │  F  │                 ┌─────┬─────┐      ┌─────┬─────┐                 │  Y  │
// └─────┘                 │ SPC │ ESC │      │ RET │ SPC │                 └─────┘
//                         └ num ┴ nav ┘      └─fn──┴ sym ┘

                        bindings = <
    &kp W       &kp L       &kp R       &kp B       &kp Z
        &kp SEMI        &kp Q       &kp U       &kp D       &kp J

    &hm_l LCTRL S     &hm_l LALT H      &hm_l LSHFT N     &hm_l LGUI T     &kp COMMA
        &kp DOT     &hm_r RGUI A      &hm_r RSHFT E     &hm_r RALT O      &hm_r RCTRL I

    &kp F       &kp M       &kp V       &kp C       &kp SLASH
        &kp G       &kp P       &kp X       &kp K       &kp Y

    &lt num SPACE       &lt nav ESC
        &lt fn RET      &lt sym SPACE
                        >;
                };


                num {
//             ┌─────┐                                          ┌─────┐
//       ┌─────┤     ├─────┬─────┐                  ┌─────┬─────┤  8  ├─────┐
//       │     ├─────┤     │     │                  │     │  7  ├─────┤  9  │
// ┌─────┼─────┤ SFT ├─────┼─────┤                  ├─────┼─────┤  5  ├─────┼─────┐
// │     │ ALT ├─────┤ GUI │ Rst │                  │     │  4  ├─────┤  6  │  0  │
// ├─────┼─────┤ CAP ├─────┼─────┤                  ├─────┼─────┤  2  ├─────┼─────┤
// │ CTL │     ├─────┤     │ Bld │                  │     │  1  ├─────┤  3  │  -  │
// ├─────┼─────┘     └─────┴─────┘                  └─────┴─────┘     └─────┼─────┤
// │     │                 ┌─────┬─────┐      ┌─────┬─────┐                 │  =  │
// └─────┘                 │     │     │      │     │ BSP │                 └─────┘
//                         └─────┴─────┘      └─────┴─────┘

                        bindings = <
    &trans     &trans       &trans      &trans      &trans
        &trans        &kp N7      &kp N8      &kp N9      &kp N0

    &kp LCTRL     &kp LALT       &kp LSHFT     &kp LGUI     &reset
        &trans     &kp N4      &kp N5     &kp N6      &trans

    &trans       &trans      &kp CLCK      &trans       &bootloader
        &trans       &kp N1       &kp N2       &kp N3       &trans

    &trans      &trans
        &trans      &kp BSPC
                        >;
                };


                sym {
//             ┌─────┐                                          ┌─────┐
//       ┌─────┤  [  ├─────┬─────┐                  ┌─────┬─────┤     ├─────┐
//       │  `  ├─────┤  ]  │     │                  │     │     ├─────┤     │
// ┌─────┼─────┤ lpl ├─────┼─────┤                  ├─────┼─────┤ SFT ├─────┼─────┐
// │     │  '  ├─────┤ rpg │     │                  │ Rst │ GUI ├─────┤ SFT │     │
// ├─────┼─────┤  -  ├─────┼─────┤                  ├─────┼─────┤     ├─────┼─────┤
// │     │  \  ├─────┤  =  │     │                  │ Bld │     ├─────┤     │ CTL │
// ├─────┼─────┘     └─────┴─────┘                  └─────┴─────┘     └─────┼─────┤
// │     │                 ┌─────┬─────┐      ┌─────┬─────┐                 │     │
// └─────┘                 │ TAB │     │      │     │     │                 └─────┘
//                         └─────┴─────┘      └─────┴─────┘

                        bindings = <
    &trans      &kp GRAVE       &kp LBKT      &kp RBKT       &trans
        &trans       &trans      &trans      &trans       &trans

    &trans      &kp SQT     &lplt      &rpgt       &trans
        &reset     &kp RGUI        &kp RSHFT        &kp RALT        &kp RCTRL

    &trans      &kp BSLH      &kp MINUS      &kp EQUAL       &trans
        &bootloader     &trans       &trans      &trans      &trans

    &kp TAB     &trans
        &trans      &trans
                        >;
                };


                nav {
//             ┌─────┐                                          ┌─────┐
//       ┌─────┤     ├─────┬─────┐                  ┌─────┬─────┤  ↑  ├─────┐
//       │     ├─────┤ Usb │ Ble │                  │ Ins │ Mut ├─────┤ VlU │
// ┌─────┼─────┤ SFT ├─────┼─────┤                  ├─────┼─────┤  ↓  ├─────┼─────┐
// │     │ ALT ├─────┤ GUI │ BtC │                  │ Del │  ←  ├─────┤  →  │ VlD │
// ├─────┼─────┤ Bt2 ├─────┼─────┤                  ├─────┼─────┤ PgU ├─────┼─────┤
// │ CTL │ Bt1 ├─────┤ Bt3 │ Bt4 │                  │ Hom │ PgD ├─────┤ End │ BrU │
// ├─────┼─────┘     └─────┴─────┘                  └─────┴─────┘     └─────┼─────┤
// │ BT0 │                 ┌─────┬─────┐      ┌─────┬─────┐                 │ BrD │
// └─────┘                 │     │     │      │     │     │                 └─────┘
//                         └─────┴─────┘      └─────┴─────┘

                        bindings = <
    &trans       &trans      &trans      &out OUT_USB       &out OUT_BLE
        &kp INS        &kp K_MUTE      &kp UP      &kp C_VOL_UP      &kp C_VOL_DN

    &kp LCTRL     &kp LALT       &kp LSHFT     &kp LGUI     &bt BT_CLR
        &kp DEL     &kp LEFT      &kp DOWN     &kp RIGHT      &kp C_BRI_UP

    &bt BT_SEL 0       &bt BT_SEL 1      &bt BT_SEL 2      &bt BT_SEL 3       &bt BT_SEL 4
        &kp HOME       &kp PG_DN       &kp PG_UP        &kp END       &kp C_BRI_DN

    &trans      &trans
        &trans      &trans
                        >;
                };


                fn {
//             ┌─────┐                                          ┌─────┐
//       ┌─────┤ F3  ├─────┬─────┐                  ┌─────┬─────┤     ├─────┐
//       │ F2  ├─────┤  F4 │     │                  │ Ble │ Usb ├─────┤     │
// ┌─────┼─────┤  F7 ├─────┼─────┤                  ├─────┼─────┤ SFT ├─────┼─────┐
// │ F1  │ F6  ├─────┤  F8 │     │                  │     │ GUI ├─────┤ ALT │     │
// ├─────┼─────┤ F11 ├─────┼─────┤                  ├─────┼─────┤     ├─────┼─────┤
// │ F5  │ F10 ├─────┤ F12 │     │                  │     │     ├─────┤     │ CTL │
// ├─────┼─────┘     └─────┴─────┘                  └─────┴─────┘     └─────┼─────┤
// │ F9  │                 ┌─────┬─────┐      ┌─────┬─────┐                 │     │
// └─────┘                 │     │     │      │     │     │                 └─────┘
//                         └─────┴─────┘      └─────┴─────┘

                        bindings = <
    &kp F1        &kp F2      &kp F3      &kp F4       &trans
        &out OUT_BLE       &out OUT_USB      &trans      &trans       &trans

    &kp F5        &kp F6      &kp F7      &kp F8       &trans
        &trans      &kp RGUI        &kp RSHFT        &kp RALT        &kp RCTRL

    &kp F9        &kp F10      &kp F11      &kp F12       &trans
        &trans       &trans      &trans      &trans       &trans

    &trans      &trans
        &trans      &trans
                        >;
                };


	    };
};
